/* miniprogram/pages/login/login.wxss */
.login-page{
  width: 750rpx;
  height: 1620rpx;
  overflow: hidden;
  position: relative;
}

.login-box{
  border-radius: 10px;
  background-color: rgba(233, 233, 233, 0.2);
  box-sizing: border-box;
  padding: 30rpx;
  /* border: 1px solid black; */
  position: absolute;
  top: 25%;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
}


.text-box{
  text-align: center;
  margin-top: 100rpx;
}

.text-box > text{
  font-size: 40px;
  font-weight: 500;

}


.act-psw{
  /* border: 1px solid red; */
  margin: 100rpx auto;
  box-sizing: border-box;
  width: 80%;
  height: 200rpx;
}

input{
  border-bottom: 1px solid white;
  height: 60rpx;

}

.act{
  width: 100%;
  margin: 60rpx auto;
  
}

.psw{
  width: 100%;
  margin: 0 auto;
}

.btn-box {
  margin: 0 auto;
  
  display: flex;
  justify-content: center;
}


#guodu{
  position: absolute;
  z-index: 1;
  width: 100%;
  
}


.signup{
  margin-top: 50rpx;
}