.mainBox{
  overflow: hidden;
}


.question > view{
  font-size: 20px;
  margin-top: 20px;
  margin-left: 10px;
}


.answer{
  width: 90%;
  margin: 0 auto;
}


.answer > view{
  font-size: 18px;
  font-weight: 400;
  margin-top: 30rpx;
}

.choosenAnswer{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 100rpx;
}

.choosenAnswer > view{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
}


