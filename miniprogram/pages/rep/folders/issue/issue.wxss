.next-finish-box{
  position: relative;
  height: 200rpx;
  margin-top: 100rpx;
}



.nextAndBack{
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  border: 1px solid black;
}

.nextAndBack > view{
  width: 200rpx;
}

.nextAndBack > view > button{
  width: 100%;
}

.backBox{
  position: absolute;
  right: 230rpx;
}

.nextBox{
  position: absolute;
  right: 20rpx;
}



.finish{
  position: absolute;
  right: 20rpx;
  top: 100rpx;
  width: 200rpx;
}


.finish > button{
  width: 100%;
}

.noChoosenAnswer{
  background-color: rgb(200, 200, 200,0.8);
  color: black;
}


.hasChoosenAnswer{
  background-color: #53CAF8;
  color: white;
}