/* miniprogram/pages/rep/rep.wxss */
.top{
  background-color: white;
}
/* 第一模块 */
.head-and-name{
  box-sizing: border-box;
  padding-top: 20rpx;
  padding-left: 30rpx;
}

.head-and-name > .image-box{
  display: inline-block;
  vertical-align: middle;
  margin-right: 20rpx;
}

.head-and-name > .image-box > image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}


.head-and-name > text{
  vertical-align: middle;
  font-weight: 450;
}


/* 第二模块 */
.title-and-intro{
  width: 100%;
  justify-content: space-around;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.title-and-intro > .rep-title{
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 30px;
  font-weight: 600;
}

.title-and-intro > .rep-intro{
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 17px;
  font-weight: 500;
}

/* 第三模块 */
.star-and-fork{
  display: flex;
  padding-left: 40rpx;
  padding-top: 20rpx;
}


.star{
  margin-right: 40rpx;
}


.star > image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.star > text{
  vertical-align: middle;
}

.fork > image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.fork > text{
  vertical-align: middle;
}

/* 第四模块 */
.button-for-star{
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.btn{
  height: 100rpx;
  transition: 0.2s color ease-in-out;
}


.active{
  box-shadow: 1px 1px 1px #CCF1F8;
}

.normal{
  box-shadow: 1px 1px 1px rgb(200, 200, 200);
}

/* 第五模块 */

/* 跳转仓库 */
.to-somewhere{
  width: 100%;
  position: relative;
  height: 100rpx;
}




.to-somewhere > text{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 14%;
  font-size: 20px;
  font-weight: 400;
}


.to-somewhere > image{
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);

}
#issue::after{
    content: "";
    position: absolute;
    width: 95%;
    height: 1px;
    border-top: 1px solid #BEBFBD;
    bottom: 0;
    right: 0;
}
#folder::after{
    content: "";
    position: absolute;
    width: 95%;
    height: 1px;
    border-top: 1px solid #BEBFBD;
    bottom: 0;
    right: 0;
}

.to-stars-icon{
  left: 5%;
}

#issue{
  margin-top: 50rpx;
  border-top: 1px solid #BEBFBD;
}

#followers{
  border-bottom: 1px #BEBFBD solid;
}

.rep-more-intro{
  margin-top: 100rpx;
  padding-bottom: 200rpx;
  background-color: white;
 
}

.question-rep{
  background-color: white;
  margin-top: 100rpx;
  height: 100rpx;
  position: relative;
  border-top: 1px solid #BEBFBD;
  border-bottom: 1px solid #BEBFBD;
}


.question-rep > view{
  top: 50%;
  transform: translateY(-50%);
}

.question-box{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 5%;
}


.question-box > image{
  width: 100%;
  height: 100%;
  
}
.question-text{
  position: absolute;
  left: 15%;
  font-size: 35rpx;
}



.right{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
}

.right > image{
  width: 100%;
  height: 100%;
}

.pay{
  position: absolute;
  width: 200rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 150rpx;
  right: 40rpx;
}

.pay > image{
  width: 60%;
  height: 60%;
}
