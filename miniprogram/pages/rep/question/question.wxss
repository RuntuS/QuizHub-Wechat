/* miniprogram/pages/rep/question/question.wxss */

.main-content{
  
  padding-bottom: 50rpx;
}


.top{
  margin-left: 10rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  position: relative;
}

.text{
  font-size: 50rpx;
  font-weight: 600;
}

.change,.create{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
}
.change{
  right: 30rpx;
}

.create{
  right: 140rpx;
}

.image{
  width: 60%;
  height: 60%;
}




.every-question-box{
  padding-top: 10rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  position: relative;
  height: 200rpx;
  width: 95%;
  margin: 0 auto;
  margin-top: 40rpx;
}




.title{
  font-size: 40rpx;
  font-weight: 400;
}

.intro{
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 40rpx;
}
.tag{
  position: absolute;
  display: flex;
  flex-direction: row;
  bottom: 20rpx;
  right: 30rpx;
}

