<cu-custom bgColor="bg-gradual-blue" class="top-bar" >
  <view slot="content">首页</view>
</cu-custom>



<view id="topBar"  wx:if="{{!loadModal}}">
  <view class="headPhoto">
    <image src="{{userInfoAva}}"></image>
  </view>
  <view id="GPS">
    <text class="cuIcon-location sm text-gray location" ></text>
    <text class="place">{{location}}</text>
  </view>

  
</view>

<view class="search"  wx:if="{{!loadModal}}">
  <view class="text">
    <text class="cuIcon-search"></text>
  </view>
  <input type="text" placeholder="搜索更多题库"  placeholder-class="holderclass" confirm-type="search"></input>

  <view class="message">
    <text class="cuIcon-message lg text-black " ></text>
  </view>
  <view class="plus">
      <text class="cuIcon-add lg text-black "></text>
  </view>
</view>



<view class="adver"  wx:if="{{!loadModal}}">
  <swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff" style="height : 100%;">
    <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
      <view class="swiper-item">
        <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
        <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
      </view>
    </swiper-item>
  </swiper>
</view>


<view class="hot bg-gradual-red radius shadow"  wx:if="{{!loadModal}}">
  热门仓库
</view>


<view class="content-box bg-gradual-blue radius shadow"  wx:if="{{!loadModal}}">
  <view wx:for="{{contentArray}}" class="rep shadow">
    <view class="headphoto-and-name">
                  <view class="headphoto-box">
                    <image src="{{userInf.avatarUrl}}"></image>
                  </view>
                  <text class="intro-name">{{userInf.nickName}}</text>
                </view>
                <view class="rep-title">
                  <text>{{item.repoNickName}}</text>
                </view>
                <view class="rep-intro">
                  <text>{{item.repoIntro}}。</text>
                </view>
                <view class="tag-class">
                    <!-- 后期再来处理不同类别颜色不同的问题 --> 
                    <view class="color bg-gradual-blue"></view> <text>{{item.tagName}}</text>
                </view>
                <view class="some-icons">
                    <view class="star">
                      <image src="/images/star.png"></image><text>{{item.starNum}}</text>
                    </view>
                    <view class="fork">
                      <image src="/images/fork.png"></image><text>{{item.forkNum}}</text>
                    </view>
    </view>
  </view>
</view>



<view class='cu-load load-modal' wx:if="{{loadModal}}">
  <!-- <view class='cuIcon-emojifill text-orange'></view> -->
  <image src='https://photo-1258955954.cos.ap-chengdu.myqcloud.com/Wechat/run.gif' class='png' mode='aspectFit'></image>
  <view class='gray-text'>加载中</view>
</view>