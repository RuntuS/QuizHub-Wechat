/* 仓库 */

.rep-box{
  width: 100%;
  background-color: white;
  margin-top: 70rpx;
  border: 1px solid #BEBFBD;
  position: relative;
  
}
/* 加载动画 */
.loading{
  display: flex;
  justify-content: center;
}




#title{
  font-size: 40rpx;
  font-weight: 500;
  display: inline-block;
  margin-left: 10rpx;
  margin-top: 30rpx;

}

.rep-slide{
  margin-top: 20rpx;
  height: 400rpx;
  width: 100%;
  /* border: 1px solid red; */
}

#scroll{
  width: 100%;
  white-space: nowrap;
}



/* 仓库内部详细布局 */

.rep{
  height: 400rpx;
  width: 500rpx;
  /* border: 1px solid black; */
  display: inline-block;
  margin-left: 50rpx;
  margin-right: 50rpx;
  border-radius: 10rpx;
  box-shadow: 1px 2px 7px #D6D8DA;
  border: 1px solid #BEBFBD;
  position: relative;
}

.headphoto-and-name{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.headphoto-box{
  width: 75rpx;
  height: 75rpx;
  border-radius: 37.5rpx;
  margin-left: 10rpx;
  overflow:hidden;
  
}


.intro-name{
  margin-left: 20rpx;

}

.headphoto-box > image{
  width: 100%;
  height: 100%;
}




/* 仓库盒子 */
.rep-title{
  margin-top: 25rpx;
  margin-left: 10rpx;
  font-size: 20px;
  font-weight: 400;
  white-space: pre-line;
}

.rep-intro{
  margin-top: 25rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  white-space: pre-line;
}

/* icon布局 */
.some-icons{
  display: flex;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  
}

.star{
  margin-right: 20rpx;
}


.star > image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.star > text{
  vertical-align: middle;
}

.fork > image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.fork > text{
  vertical-align: middle;
}

/* 跳转仓库 */
.to-rep{
  width: 100%;
  position: relative;
  margin-top: 100rpx;
  height: 100rpx;
  border-top: 1px solid #BEBFBD;
}

.to-stars{
  width: 100%;
  position: relative;
  height: 100rpx;
  
}

.to-rep > text{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 19%;
  font-size: 20px;
  font-weight: 400;
}

.to-rep > image{
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);

}
.to-rep::after{
    content: "";
    position: absolute;
    width: 90%;
    height: 1px;
    border-top: 1px solid #BEBFBD;
    bottom: 0;
    right: 0;
}


.to-stars > text{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 19%;
  font-size: 20px;
  font-weight: 400;
}

.to-stars > image{
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.to-stars-icon{
  left: 10%;
}

.tag-class{
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  bottom: 10rpx;
  left: 20rpx;
}

.tag-class > .color{
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}