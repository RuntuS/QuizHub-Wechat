/* miniprogram/pages/home/home.wxss */
.home{
  overflow: hidden;
}

 /* 背景图片 */

.background-image-box{
  width: 100%;
  height: 500rpx;
  position: absolute;
  top: 0;
  z-index: -1;
}
.background-image{
  width: 100%;
  height: 100%;
  
}

 /* 用户信息 */
 #head{
   width: 100%;
   margin: 0 auto;
   height: 500rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
 }


 /* 左侧图片+姓名 */

.head-photo-box{
   width: 200rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   margin-left: 50rpx;
   box-sizing: border-box;
 }

.head-photo{ 
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  display: inline-block;
  box-shadow: 1px 1px 5px #35B4EC;
}

.name{
  line-height: 100%;
  display: inline-block;
  font-weight: 500;
}

/* 自我介绍 */
.self-intro{
  box-sizing: border-box;
  /* border: 1px solid red; */
  height: 300rpx;
  margin-left: 50rpx;

  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 图片和文字居中的方法，在所有子元素上设置vertical-align */
.intro > text {
  vertical-align: middle;
  text-shadow: 3px 3px 10px #CDDDFF;
}

.intro > image{
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
}

.url > text{
  vertical-align: middle;
  text-shadow: 3px 3px 10px #CDDDFF;
}

.url > image{
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}

/* 公共样式 */
.pubilc-follow{
  height: 100%;
  width: 33.3%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  justify-content: space-around;
  padding-top: 10rpx;
}


.top{
  display: flex;
  justify-content: center;
}

.bottom{
  /* border: 1px solid blue; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom > text{
  font-size: 25px;
}

.icon{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  display: inline-block;
  margin-right: 10rpx;
  
}
.fo-text{
  vertical-align: middle;
  line-height: 200%;
}

/* 消息设置 */
.config:active{
  background-color: rgb(244, 244, 244);
}


.config-top{
  position: relative;
}


.unread{
  position: absolute;
  height: 15rpx;
  width: 15rpx;
  background-color: red;
  border-radius: 7.5rpx;
  left: 40rpx;
}





/* follow设置 */
.follow{
  height: 150rpx;
  width: 100%;
  /* border: 1px solid black; */
  display: flex;
  box-shadow: 0 2px 3px -1px #D6D8DA;
  background-color: white;
  z-index: -2;
  

}


.followers{
  position: relative;
  
}

/* 分界线 */
.followers::after{
  content: "";
  position: absolute;
  width: 1px;
  height: 70%;
  border-right: 1px solid #D2D4CD;
  left: 100%;
}

.followers > .bottom > text{
  color: red;
}

.following{
  position: relative;
}
/* 分界线 */
.following::after{
  content: "";
  position: absolute;
  width: 1px;
  height: 70%;
  border-right: 1px solid #D2D4CD;
  left: 100%;
}

.following > .bottom > text{
  color: orange;
}


